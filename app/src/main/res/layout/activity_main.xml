<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miko.zd.loginnwuweb.MainActivity">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="西北大学教务系统"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/linl1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_top"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户名:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_user"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linl2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_top"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="密码:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linl3"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_top"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_verifation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="验证码:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_verifation"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_verifation"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/linl2"
        android:layout_toRightOf="@id/linl2" />

    <ImageButton
        android:id="@+id/ib_refresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/linl3"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/linl3"
        android:background="@drawable/refresh" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linl3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="登录" />
    <Button
        android:id="@+id/bt_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linl3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="退出"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bt_getscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_login"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/bt_login"
        android:text="获取四六级成绩" />
</RelativeLayout>

